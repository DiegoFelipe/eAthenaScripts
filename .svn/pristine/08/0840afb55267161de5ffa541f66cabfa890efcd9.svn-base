			goto M_Cont;
			} else if(#Friend==2) {
			query_sql "UPDATE `login` SET `friend_sec3` = `"+@name+"` WHERE `account_id` = `"+getcharid(3)+"`";
			set #Friend, 3;
			goto M_Cont;
			}			
