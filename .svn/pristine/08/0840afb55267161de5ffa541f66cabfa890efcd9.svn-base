			input @Friend$;
			query_sql "SELECT `account_id` FROM `login` WHERE `name` = `"+@Friend$+"`",@name;
			if(getstrlen(@name) < 2) {
			mes "essa pessoa não existe, deseja tentar novamente ou ignorar essa parte ?";
