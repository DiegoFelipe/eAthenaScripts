			set #MyIp, query_sql "SELECT `last_ip` FROM `login` WHERE `account_id` = `"+getcharid(3)+"`";
			mes "[Controlador de Contas]";
			mes "Deseja guardar seu Zeny?";
			if(select("Sim","Não")==2) goto L_See;
			mes "Insira quanto";
